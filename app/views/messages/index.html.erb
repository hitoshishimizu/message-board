<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>

<%= form_for(@message, html: { class: 'form-horizontal' }) do |f| %>

<div class="form-group">
    <!--<label for="message_name" class="control-label">名前:</label>-->
    <%= f.label :name, "名前:", class: "col-sm-2 control-label" %>
  <div class="col-sm-5">
    <%= f.text_area :name, class: "form-control" %>
  </div>
</div>

<div class="form-group">
    <!--<label for="message_body" class="control-label">内容:</label>-->
    <%= f.label :name, "内容:", class: "col-sm-2 control-label" %>
  <div class="col-sm-5">
  <%= f.text_area :body, class: "form-control" %>
  <%= f.submit class: "btn btn-sm btn-primary" %>
  </div>
</div＞ 
<% end %>